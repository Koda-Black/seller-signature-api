generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agreement {
  id               Int      @id @default(autoincrement())
  agreementDate    DateTime
  agreementAmount  Float
  duration         String
  extensionPeriod  String?
  extensionAmount  Float?
  propertyLocation String
  sellerSign       String
  signedBy         String
  sellerName       String
  createdAt        DateTime @default(now())
  documents        DocumentInstance[] // Relation to DocumentInstance
}

model DocumentInstance {
  id                   Int      @id @default(autoincrement())
  agreementId          Int      // Foreign key linking to Agreement
  signatureRequestId   String
  status               String   // Status like "signed", "pending", etc.
  createdAt            DateTime @default(now())
  
  Agreement            Agreement @relation(fields: [agreementId], references: [id]) // Define the relationship
}
